---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';

import orphanageImage from '../assets/img/activities/orphanage.webp';

// import translations
import translations, {
    convertPageTitle,
    localeLink,
} from '../utils/translationTools';
const t = translations(Astro.url);
---

<BaseLayout
    title={convertPageTitle(t.orphanage, t.title)}
    description={t.description}
>
    <h1 class="text-white text-center mb-4">{t.orphanage}</h1>
    <div class="container col-11 col-lg-8 text-white dark-bg rounded-3 p-4">
        <p class="mb-4">
            {t.orphanageText}
        </p>
        <Image
            src={orphanageImage}
            alt="orphanage picture"
            width={500}
            class="page-image"
        />
    </div>
</BaseLayout>

<style>
    .page-image {
        width: 60vh;
        max-width: 100%;
        height: auto;
        object-fit: contain;
        margin: auto;
        display: block;
        border-radius: 5px;
    }
</style>
