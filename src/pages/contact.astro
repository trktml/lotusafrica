---
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/BaseLayout.astro';

// import translations
import translations, {
    convertPageTitle,
    localeLink,
} from '../utils/translationTools';
const t = translations(Astro.url);
---

<BaseLayout
    title={convertPageTitle(t.contact, t.title)}
    description={t.description}
>
    <h1 class="text-white text-center mb-4">{t.contact}</h1>
    <div
        class="container fw-semibold py-3 px-4 rounded-3 dark-bg text-white col-11 col-lg-8"
    >
        <div class="col-12 d-flex align-items-center gap-2">
            <img
                src="data:image/png;base64,"
                alt="adress icon"
                class="contact-page-icons"
                width="72"
                height="72"
            />
            <div class="d-inline-block">
                24th Street, Sinkor, Airfeld-Shortcut<br />Monrovia, Republic of
                Liberia
                <br />
                <div style="font-size: min(15px, 3vw);" class="fw-light">
                    {'(' + t.centerOfficeUnderConstruction + ')'}
                </div>
            </div>
        </div>
        <div class="col-12 d-flex align-items-center gap-2 mt-5">
            <img
                src="data:image/png;base64,"
                alt="phone icon"
                class="contact-page-icons"
                width="72"
                height="72"
            />
            <div>+231 88 869 3902</div>
        </div>
        <div class="col-12 d-flex align-items-center gap-2 mt-5">
            <img
                src="data:image/png;base64,"
                alt="email icon"
                class="contact-page-icons"
                width="72"
                height="72"
            />
            <div>mstoneiron66@gmail.com</div>
        </div>
    </div>
</BaseLayout>

<style>
    .contact-page-icons {
        width: 50px;
        height: 50px;
        margin-right: 10px;
    }
</style>
